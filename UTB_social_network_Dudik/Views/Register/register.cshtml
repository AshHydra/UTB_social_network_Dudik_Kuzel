@model UTB_social_network_Dudik.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid page-background">
    <!-- Header -->
    <div class="header">
        <div class="header-content">
            <h1 class="header-title">UTB Chatter 2024</h1>
        </div>
    </div>

    <!-- Welcome Text -->
    <div class="welcome-text">
        <h2>Create Your Account</h2>
        <p>Join the realtime UTB Chatter community</p>
    </div>

    <!-- Error Alert -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <!-- Register Form -->
    <div class="center-container">
        <div class="form-box">
            <h3 class="form-title">Register</h3>
            <form method="post" asp-action="Register" asp-controller="Account">
                <!-- First Name -->
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" placeholder="John" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>

                <!-- Last Name -->
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" placeholder="Doe" required />
                <span asp-validation-for="LastName" class="text-danger"></span>

                <!-- User Name -->
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" placeholder="john_doe" required />
                <span asp-validation-for="UserName" class="text-danger"></span>

                <!-- Email -->
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="example@example.com" required />
                <span asp-validation-for="Email" class="text-danger"></span>

                <!-- Password -->
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="*********" required />
                <span asp-validation-for="Password" class="text-danger"></span>

                <!-- Register Button -->
                <button type="submit" class="btn submit-button">Register</button>
                <div class="register-link">
                    <p>
                        Already have an account?
                        <a asp-controller="Account" asp-action="Login" class="link-register">Login</a>
                    </p>
                </div>

            </form>
        </div>
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}