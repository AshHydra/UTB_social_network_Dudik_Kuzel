@model List<UTB_social_network_Dudik.Models.EditUserViewModel>

@{
    ViewData["Title"] = "Admin Page";
}

<!-- Navigation Bar -->
<partial name="_NavBar" />

<div class="container mt-4">
    <h1>Admin Page</h1>
    <p>Welcome to the admin panel!</p>

    @if (Model != null && Model.Any())
    {
        <div class="user-list mt-4">
            @foreach (var user in Model)
            {
                <div class="user-bar p-3 mb-3 border rounded">
                    <div class="user-info">
                        <p><strong>Username:</strong> @user.UserName</p>
                        <p><strong>Email:</strong> @user.Email</p>
                        <p><strong>Roles:</strong> @user.RoleIds</p>
                    </div>
                    <div class="user-actions mt-2">
                        <a asp-action="Edit" asp-controller="User" asp-route-id="@user.Id" class="btn btn-primary">Edit User</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No users found.</p>
    }
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/Mainpage.css" asp-append-version="true" />
}
