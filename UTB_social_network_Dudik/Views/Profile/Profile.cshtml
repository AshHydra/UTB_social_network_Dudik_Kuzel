@model UTB_social_network_Dudik.Models.ProfileViewModel

<partial name="_NavBar" />

<div class="container mt-4 chat-container">
    <h1 class="chats-title">User Profile</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="Profile" method="post" class="mt-4">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label asp-for="UserName" class="text-white"></label>
            <input asp-for="UserName" class="form-control bg-dark text-white border-secondary" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="text-white"></label>
            <input asp-for="Email" class="form-control bg-dark text-white border-secondary" readonly />
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="text-white"></label>
            <input asp-for="FirstName" class="form-control bg-dark text-white border-secondary" />
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="text-white"></label>
            <input asp-for="LastName" class="form-control bg-dark text-white border-secondary" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="text-white"></label>
            <input asp-for="PhoneNumber" class="form-control bg-dark text-white border-secondary" />
        </div>

        <h2 class="chats-title mt-5">Change Password</h2>
        <div class="form-group">
            <label asp-for="CurrentPassword" class="text-white"></label>
            <input asp-for="CurrentPassword" class="form-control bg-dark text-white border-secondary" />
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="text-white"></label>
            <input asp-for="NewPassword" class="form-control bg-dark text-white border-secondary" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmNewPassword" class="text-white"></label>
            <input asp-for="ConfirmNewPassword" class="form-control bg-dark text-white border-secondary" />
        </div>

        <button type="submit" class="btn send-message-btn mt-3">Save Changes</button>
    </form>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/Mainpage.css" asp-append-version="true" />
}
