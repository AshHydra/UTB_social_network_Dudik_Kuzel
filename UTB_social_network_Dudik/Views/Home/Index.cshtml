@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid page-background">
    <!-- Header -->
    <div class="header">
        <div class="header-content">
            <h1 class="header-title">UTB Chatter 2024</h1>
        </div>
    </div>

    <!-- Welcome Text -->
    <div class="welcome-text">
        <h2>Welcome to realtime UTB Chatter</h2>
        <p>Safe chatting with your friends</p>
    </div>

    <!-- Registration and Login Forms -->
    <div class="form-container">
        <!-- Register Form -->
        <div class="form-box">
            <h3 class="form-title">Register</h3>
            <form asp-controller="Account" asp-action="Register" method="post">
                <!-- Email -->
                <label for="register-email">E-mail</label>
                <input id="register-email" name="Email" type="email" placeholder="example@example.com" class="form-control" required />

                <!-- Password -->
                <label for="register-password">Password</label>
                <input id="register-password" name="Password" type="password" placeholder="*********" class="form-control" required />

                <!-- Nickname -->
                <label for="register-nickname">Nickname</label>
                <input id="register-nickname" name="Nickname" type="text" placeholder="FAIn00b" class="form-control" required />

                <!-- Register Button -->
                <button type="submit" class="btn submit-button">Register</button>
            </form>
        </div>

        <!-- Login Form -->
        <div class="form-box">
            <h3 class="form-title">Login</h3>
            <form>
                <!-- Email -->
                <label for="login-email">E-mail</label>
                <input id="login-email" type="email" placeholder="example@example.com" class="form-control" />

                <!-- Password -->
                <label for="login-password">Password</label>
                <input id="login-password" type="password" placeholder="*********" class="form-control" />

                <!-- Login Button -->
                <button type="submit" class="btn submit-button">Login</button>
            </form>
        </div>
    </div>
</div>



@section Styles
{
    <link rel="stylesheet" href="~/css/indexmain.css" asp-append-version="true" />
}
