@{
    ViewData["Title"] = "Main Page";
}

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">UTB Chatter</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="MainPage">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contacts">Contacts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Admin">Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Profile">Profile</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container-fluid chat-container mt-4">
    <div class="row">
        <div class="col-2">
            <!-- Chat List -->
            <div class="chat-sidebar">
                <div class="chats-title">Chats</div>
                <input type="text" id="searchInput" placeholder="Search a conversation..." class="form-control mb-3 search-input" onkeyup="filterChats()" />
                <div id="chatTabs">
                    <div class="chat-tab" onclick="activateTab(this)">
                        <span class="chat-name">Chat 1</span>
                        <span class="message-icon-list">
                            <img src="https://i.imgur.com/F8pNkMa.png" alt="message-icon" class="chat-icon">
                        </span>
                    </div>
                    <div class="chat-tab" onclick="activateTab(this)">
                        <span class="chat-name">Chat 2</span>
                        <span class="message-icon-list">
                            <img src="https://i.imgur.com/F8pNkMa.png" alt="message-icon" class="chat-icon">
                        </span>
                    </div>
                    <div class="chat-tab" onclick="activateTab(this)">
                        <span class="chat-name">Chat 3</span>
                        <span class="message-icon-list">
                            <img src="https://i.imgur.com/F8pNkMa.png" alt="message-icon" class="chat-icon">
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-10">
            <!-- Chat Window -->
            <div class="chat-content">
                <div class="chat-default-message">
                    No chat selected
                </div>
                <div class="chat-details">
                    <div class="chat-header">
                        <span class="chat-name">Chat 1</span>
                        <span class="message-icon">
                            <img src="https://i.imgur.com/fSuzzAU.png" alt="message-icon">
                        </span>
                    </div>
                    <div class="chat-status">Status: <span class="status connected">Connected</span></div>
                    <div class="chat-window">
                        <div class="messages-wrapper"></div>
                    </div>
                    <div class="chat-input">
                        <input type="text" placeholder="Enter a message..." class="form-control message-input" />
                        <button class="send-message-btn">➤</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Mainpage.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chathub")
            .configureLogging(signalR.LogLevel.Information)
            .build();

        connection.start()
            .then(() => console.log("Connected to SignalR Hub"))
            .catch(err => console.error("SignalR connection error:", err));

        function filterChats() {
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            const chatItems = document.querySelectorAll('.chat-tab');

            chatItems.forEach(chat => {
                const chatText = chat.textContent.toLowerCase();
                chat.style.display = chatText.includes(searchInput) ? '' : 'none';
            });
        }

        function activateTab(tab) {
            const chatName = tab.querySelector('.chat-name').textContent.trim();
            const chatContent = document.querySelector('.chat-content');

            chatContent.querySelector('.chat-name').textContent = chatName;
            chatContent.querySelector('.chat-default-message').style.display = 'none';
            chatContent.querySelector('.chat-details').style.display = 'block';

            connection.invoke("JoinChat", chatName)
                .then(() => console.log(`Joined chat: ${chatName}`))
                .catch(err => console.error("Error joining chat:", err));
        }

        document.querySelector('.send-message-btn').addEventListener('click', sendMessage);

        document.querySelector('.message-input').addEventListener('keydown', function (e) {
            if (e.key === 'Enter') sendMessage();
        });

        function sendMessage() {
            const messageInput = document.querySelector('.message-input');
            const message = messageInput.value.trim();
            if (!message) return;

            const chatName = document.querySelector('.chat-name').textContent;
            const sender = "@User.Identity.Name"; // Získání aktuálního uživatele ze serveru

            connection.invoke("SendMessage", chatName, sender, message)
                .then(() => console.log(`Sent message to ${chatName}: ${message}`))
                .catch(err => console.error("Error sending message:", err));

            messageInput.value = '';
        }


        connection.on("ReceiveMessage", (chatName, sender, message) => {
            const activeChat = document.querySelector('.chat-name').textContent.trim();
            if (activeChat === chatName) {
                const messagesWrapper = document.querySelector('.messages-wrapper');
                const messageElem = document.createElement('div');

                const isCurrentUser = sender === "@User.Identity.Name"; // Porovná aktuální uživatelské jméno
                messageElem.classList.add('chat-message');
                messageElem.classList.add(isCurrentUser ? 'my-message' : 'other-message');

                messageElem.innerHTML = `
                    <div class="message-sender">${sender}</div>
                    <div class="message-text">${message}</div>
                `;

                messagesWrapper.appendChild(messageElem);
                messagesWrapper.scrollTop = messagesWrapper.scrollHeight;
            }
        });

    </script>
}
